{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "types": [ "node"],
    "allowJs": true,
    "rootDir" : "./src",
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types/",
      "./src/@types/"
    ],
  },
  "exclude": [
    "node_modules/*"
  ],
  "typedocOptions": {
    "mode": "file",
    "out": "./docs",
    "theme": "default",
    "ignoreCompilerErrors": true,
    "target": "ES6",
    "moduleResolution": "node",
    "module": "umd",
    "name" : "Amadeus Video Player",
    "readme" : "./DOC.md"
  }
}
